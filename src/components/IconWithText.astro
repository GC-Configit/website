---
interface Props {
  icon: string;
  shouldGrow?: boolean;
  skipHeader?: boolean;
}

const { icon, shouldGrow, skipHeader } = Astro.props;
---
<div class="icon-holder f-row">
    <span class={shouldGrow != null || shouldGrow == true ? "grow": ""}><i class={icon}></i>
      {skipHeader ? <slot/> : <h3><slot /></h3>}
      <span>
</div>


<style lang="scss">
      span {
        display: flex;
      }

      h3 {
        flex: 0 0 100%;
        align-items: center;
        margin: 0;
        padding: 0;
        font-weight: 400;
      }

      h3,
      i {
        margin-right: 0.5rem;
        font-size: 1.5rem;
      }

      i {
        display: flex;
        justify-content: center;
        min-width: 2rem;
      }

      .grow {
        transition: all 0.2s ease-in-out;
        cursor: pointer;
      }

      .grow:hover {
        transform: scale(1.1);
      }
</style>
