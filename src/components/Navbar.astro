---
import IconWithText from "./IconWithText.astro";
---

<nav class="f-column">
  <div class="image-container f-row">
    <a id="nav-logo-anchor" href="./"><img id="nav-logo" src="/images/navbar-logo.jpg" /></a>
    <div class="contact f-column">
      <IconWithText icon="fa-solid fa-phone" shouldGrow><a href="tel:+48792010469">792 010 469</a></IconWithText>
    </div>
  </div>
  <ul>
    <li><a href="./">Strona Główna</a></li>
    <li><a href="/prawo-karne-i-wykroczenia">Prawo karne i wykroczenia</a></li>
    <li><a href="/prawo-cywilne">Prawo cywilne</a></li>
    <li><a href="/odszkodowania">Odszkodowania</a></li>
    <li><a href="/prawo-rodzinne">Prawo rodzinne</a></li>
    <li><a href="/egzekucja-i-windykacja">Egzekucja i windykacja</a></li>
    <li><a href="/kontakt">Kontakt</a></li>
  </ul>
</nav>

<style>
  nav {
    background-color: #6b6054;
  }
  .image-container {
    max-height: 250px;
    & img {
      min-width: min(1226px, 90vw);
      width: auto;
      height: 10rem;
      mix-blend-mode: multiply;
    }

    .contact {
      padding-left: 12rem;
      align-content: stretch;
      justify-content: center;
    }

    .icon-holder {
      cursor: pointer;
      i,h3 {
        color: black;
      }
    }
  }

  @media screen and (max-width: 768px) {
    .image-container {
      max-width: 100vw;
      & img {
        max-width: 100%;
      }
    }
  }

  ul {
    display: flex;
    justify-content: center;
    column-gap: 5rem;
    list-style-type: none;
    font-weight: 500;
    margin-top: -2rem;
    padding-bottom: 1rem;
    z-index: 1;
  }

  a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    cursor: pointer;
  }

  #nav-logo-anchor{
    cursor: auto;
  }

</style>
