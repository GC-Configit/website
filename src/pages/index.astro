---
import IconWithText from "../components/IconWithText.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="header-wrapper">
      <div class="wrapper">
        <h1>Twój Spokój, Nasza Walka</h1>
        <h3>
          Kancelaria Adwokacka Tadeusz Czachorowski, Chronimy Twoje Interesy!
        </h3>
      </div>
      <div class="image-container">
        <img src="/images/profile-point.jpg" alt="profile photo" />
      </div>
    </div>

    <div class="taking-care-of-wrapper center f-column">
      <div class="item-container">
        <div class="row header">
          <h2>Co możemy dla Ciebie zrobić?</h2>
        </div>
        <div class="row">
          <IconWithText icon="fa-solid fa-section" shouldGrow>
            Prawo Cywilne
          </IconWithText>
          <IconWithText icon="fa-solid fa-gavel" shouldGrow>
            Prawo Karne
          </IconWithText>
        </div>
        <div class="row">
          <IconWithText icon="fa-solid fa-people-group" shouldGrow>
            Prawo Rodzinne
          </IconWithText>
          <IconWithText icon="fa-solid fa-balance-scale" shouldGrow>
            Prawo Pracy
          </IconWithText>
        </div>
        <div class="row">
          <IconWithText icon="fa-solid fa-car-burst" shouldGrow>
            Odszkodowania
          </IconWithText>
          <IconWithText icon="fa-solid fa-coins" shouldGrow>
            Egzekucja i windykacja
          </IconWithText>
        </div>
      </div>
    </div>

    <div class="about-us-container f-row">
      <div class="image-container-left">
        <img src="/images/gown.jpg" alt="gown photo" />
      </div>
      <div class="text-container f-column">
        <h1>Lorem ipsum</h1>
