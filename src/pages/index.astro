  <style>
    .header-wrapper {
      display: flex;
      flex-grow: 1;
      justify-content: center;
      margin-bottom: -10rem;

      & .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-bottom: 2rem;
        width: 75%;
      }

      & h1,
      & h3 {
        display: flex;
        justify-content: center;
      }

      .image-container {
        img {
          margin-left: 5rem;
          clip-path: circle(50%);
          width: 400px;
          height: auto;
        }
      }
    }

    main {
      flex-direction: column;
    }

    .item-container {
      display: flex;
      flex-wrap: wrap;
      padding: 0 10rem;
      padding-bottom: 5rem;

      & > .row {
        display: flex;
        flex: 100%;
        flex-wrap: wrap;
        padding: 1.25rem 0;

        &.header {
          display: flex;
          justify-content: center;
          align-items: center;
        }

        .icon-holder {
          flex: 0 0 50%;
          display: flex;
          justify-content: center;
        }
      }
    }

    .item-container::before {
      content: "";
      position: absolute;
      top: 0px;
      left: 0;
      width: 100%;
      height: 115vh;
      background-image: url(/images/Themis.png);
      background-size: cover;
      filter: blur(7px);
      z-index: -1;
    }

    .about-us-container {
      .image-container-left {
        img {
          width: 350px;
          height: auto;
          box-shadow: 0px 0px 20px 5px rgba(0, 0, 0, 0.2);
        }
      }

      .text-container {
        padding-left: 1rem;
        gap: 2rem;
        h1 {
          text-align: center;
        }
      }
    }
  </style>
</Layout>
